{
  "id": "/qa/product/1",
  "groups": [
    {
      "id": "frontend",
      "apps": [
        {
          "container": {
            "type": "DOCKER",
            "docker": {
              "image": "quay.io/gambol99/apache-php:latest",
              "network": "BRIDGE",
              "portMappings": [
                {
                  "containerPort": 80,
                  "hostPort": 0,
                  "protocol": "tcp"
                },
                {
                  "containerPort": 443,
                  "hostPort": 0,
                  "protocol": "tcp"
                }
              ]
            }
          },
          "healthChecks": [
            {
              "protocol": "HTTP",
              "path": "/hostname.php",
              "gracePeriodSeconds": 3,
              "intervalSeconds": 10,
              "portIndex": 0,
              "timeoutSeconds": 10,
              "maxConsecutiveFailures": 3
            }
          ],
          "id": "apache",
          "mem": 64,
          "cpus": 0.2,
          "args": [],
          "env": {
            "ENVIRONMENT": "qa",
            "NAME": "frontend",
            "SERVICE_80_NAME": "apache_http",
            "SERVICE_443_NAME": "apache_https",
            "BACKEND_GRAPHITE": "graphite_carbon;2003",
            "BACKEND_STATSD": "statsd;8125",
            "BACKEND_MYSQL_MASTER": "mysql;3306",
            "BACKEND_CACHE": "redis;6379"
          },
          "dependencies": [
            "/qa/product/1/database",
            "/qa/product/1/caching",
            "/qa/product/1/graphite"
          ]
        },
        {
          "container": {
            "type": "DOCKER",
            "docker": {
              "image": "quay.io/gambol99/apache-php:latest",
              "network": "BRIDGE",
              "portMappings": [
                {
                  "containerPort": 80,
                  "hostPort": 0,
                  "protocol": "tcp"
                },
                {
                  "containerPort": 443,
                  "hostPort": 0,
                  "protocol": "tcp"
                }
              ]
            }
          },
          "healthChecks": [
            {
              "protocol": "HTTP",
              "path": "/hostname.php",
              "gracePeriodSeconds": 3,
              "intervalSeconds": 10,
              "portIndex": 0,
              "timeoutSeconds": 10,
              "maxConsecutiveFailures": 3
            }
          ],
          "id": "apache",
          "mem": 64,
          "cpus": 0.2,
          "args": [],
          "env": {
            "ENVIRONMENT": "qa",
            "NAME": "graphite",
            "SERVICE_80_NAME": "graphite_http",


          },
          "dependencies": [
            "/qa/product/1/database",
            "/qa/product/1/caching",
            "/qa/product/1/graphite"
          ]
        }
      ]
    }
  ]
}
